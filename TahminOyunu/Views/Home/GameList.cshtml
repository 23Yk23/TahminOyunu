@model List<EntityLayer.Concrete.Media>

@{
    ViewData["Title"] = "Oyun Listesi";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e2f, #12121c);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Sayfanın en az ekran yüksekliğinde olmasını sağlar */
    }

    .container {
        padding: 40px;
        text-align: center;
        flex: 1; /* Container'ın kullanılabilir alanı kaplamasını sağlar */
    }

    h2 {
        color: #f8f8f8;
        margin-bottom: 30px;
    }

    table {
        width: 80%;
        margin: auto;
        border-collapse: collapse;
        background-color: #2c2c3e;
        border-radius: 10px;
        overflow: hidden;
    }

    th, td {
        padding: 15px;
        text-align: center;
        border-bottom: 1px solid #444;
        font-size: 16px;
    }

    th {
        background-color: #3b3b50;
        color: #fff;
    }

    tr:hover {
        background-color: #44445a;
    }
</style>

<div class="container">
    <h2>@ViewBag.CategoryName Kategorisindeki Oyunlar</h2>

    @if (Model != null && Model.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th><i class="fa-solid fa-video"></i></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = Model.Count; i > 0; i--)
                {
                    <tr>
                        <td>@(i)</td>
                        <td>
                            <a href="/Home/PlayGame/@Model[Model.Count - i].Id" class="btn btn-secondary">
                                <i class="fa-solid fa-circle-right"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <i class="fa-solid fa-triangle-exclamation"></i> Bu kategoriye henüz içerik eklenmemiştir.
        </div>
    }
</div>