@{
    ViewBag.Title = "Fotoğraf Yükle";
}
<style>
    body {
        background: linear-gradient(135deg, #1e1e2f, #12121c);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #f0f0f0;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
    }

    .upload-container {
        background-color: rgba(255, 255, 255, 0.05);
        padding: 30px;
        margin-top: 100px;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0,0,0,0.4);
        width: 90%;
        max-width: 500px;
        text-align: center;
    }

    .upload-container h2 {
        margin-bottom: 20px;
        font-size: 24px;
        color: #ffffff;
    }

    input[type="file"] {
        display: block;
        margin: 20px auto;
        color: #fff;
    }

    button[type="submit"] {
        padding: 10px 25px;
        background-color: #44445a;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    button[type="submit"]:hover {
        background-color: #5c5c7a;
    }

    img {
        margin-top: 20px;
        max-width: 100%;
        border-radius: 10px;
        box-shadow: 0 0 8px rgba(255,255,255,0.2);
    }

    p {
        margin-top: 10px;
        color: #a0ffa0;
    }
</style>


<h2>Firebase'e Fotoğraf Yükle</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <input type="file" name="file" />
    <button type="submit">Yükle</button>
</form>

@if (ViewBag.ImageUrl != null)
{
    <p><strong>Görsel yüklendi:</strong></p>
    <img src="@ViewBag.ImageUrl" style="max-width:300px;" />
}
